{
    "name": "ticketx/smarterp",
    "type": "project",
    "description": "Smart ERP Solution built on Laravel for Small and Medium Enterprises (SMEs) and large-scale enterprises.",
    "keywords": [
        "erp",
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "awcodes/filament-badgeable-column": "^3.0",
        "barryvdh/laravel-debugbar": "^3.15",
        "barryvdh/laravel-dompdf": "^3.1",
        "bezhansalleh/filament-shield": "^4.0",
        "filament/filament": "^4.0",
        "filament/spatie-laravel-settings-plugin": "^4.0",
        "flowframe/laravel-trend": "^0.3.0",
        "guava/filament-icon-picker": "^3.0",
        "hugomyb/filament-media-action": "^4.0",
        "laravel/framework": "^11.9",
        "laravel/tinker": "^2.9",
        "milon/barcode": "^11.0",
        "spatie/eloquent-sortable": "^4.4",
        "wikimedia/composer-merge-plugin": "^2.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "filament/upgrade": "^4.0",
        "laravel/boost": "^1.1",
        "laravel/pail": "^1.1",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "merge-plugin": {
            "include": [
                "plugins/*/*/composer.json"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "minimum-stability": "beta",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/mrtinhnguyen/smarterp/issues",
        "source": "https://github.com/mrtinhnguyen/smarterp",
        "docs": "https://docs.smarterp.vn"
    }
}
